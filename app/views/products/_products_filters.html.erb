<div class="filters-container">
  <%= form_for_filterrific @filterrific do |f| %>
    <div class="row">
      <div class="col col-md-3">
        <label>Search</label>
        <%= f.text_field(:search_text, :class => 'filterrific-periodically-observed form-control') %>
      </div>
      <div class="col col-md-3 filter">
        <label>Cagetory</label>
        <%= f.select(:with_category_id, @filterrific.select_options[:with_category_id], include_blank: "- Any -", class: "form-control") %>
      </div>
      <div class="col col-md-3">
        <%= link_to "Reset filters", reset_filterrific_url, class: "btn btn-primary filter-reseter" %>
        <%= render_filterrific_spinner %>
      </div>
    </div>
  <% end %>
</div>