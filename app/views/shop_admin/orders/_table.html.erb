<div id="orders-container">
  <table class="table table-bordered">
    <tr>
      <th>Order ID</th>
      <th>User</th>
      <th>Price</th>
      <th>Ordered at</th>
    </tr>
    <% orders.each do |order| %>
      <tr>
        <td><%= "Order##{order.id}" %></td>
        <td><%= order.user.email %></td>
        <td><%= order.price %></td>
        <td><%= format_date_time(order.created_at) %></td>
      </tr>
    <% end %>
  </table>

  <%= paginate orders %>
</div>